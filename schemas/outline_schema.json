{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "OutlineSpec",
  "type": "object",
  "additionalProperties": false,
  "required": ["h1", "h2s", "notes"],
  "properties": {
    "h1": { "type": "string", "minLength": 5 },
    "h2s": {
      "type": "array",
      "minItems": 4,
      "maxItems": 6,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "title",
          "goal",
          "summary",
          "fact_refs",
          "bridge_to_next",
          "kw_targets",
          "length_target_chars"
        ],
        "properties": {
          "title": { "type": "string", "minLength": 3 },
          "goal": { "type": "string", "minLength": 5 },
          "summary": { "type": "string", "minLength": 40, "maxLength": 200 },
          "fact_refs": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "bridge_to_next": { "type": "string", "minLength": 5 },
          "kw_targets": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          },
          "length_target_chars": {
            "type": "integer",
            "minimum": 400,
            "maximum": 1000
          }
        }
      }
    },
    "notes": { "type": "string" }
  }
}
